.wrapper
  = render 'items/item-header'


.top
  .top__body
    .top__body__new_account
      アカウントをお持ちでない方はこちら
      .top__body__new_account__box
        = link_to new_user_registration_path, class:"top__body__new_account__box__text" do
          新規登録
 
    .top__body__login  
      = icon('far', 'envelope fa-lg') 
      メールアドレスでログイン<br> 
    
    = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
    
      .new_user__body
        .field
          = f.email_field :email, class:"field__box",autofocus: true, autocomplete: "email", placeholder: "メールアドレス"
          
        .field
          = f.password_field :password, class:"field__box",autocomplete: "current-password" ,placeholder: "パスワード"
     
        -# 不要と判断したのでパスワード記憶記述を外しましたが、また必要になるかもしれないので残しています木下/6/15
        -# - if devise_mapping.rememberable?
        -#   .field
        -#     = f.check_box :remember_me
        -#     = f.label :remember_me

        .actions
          = f.submit "ログイン", class:"next_button" 

        = render "devise/shared/links"

.wrapper
  = render 'items/item-footer'


  


